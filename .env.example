# Lendly Flutter App - Environment Configuration
# Copy this file to .env and update with your values

# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
# For local development, use your computer's IP address or localhost
# For production, use your deployed backend URL
API_BASE_URL=http://localhost:4000/api
SOCKET_URL=http://localhost:4000

# For production deployment, uncomment and use:
# API_BASE_URL=https://lendly-backend.vercel.app/api
# SOCKET_URL=https://lendly-backend.vercel.app

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
DEBUG_MODE=true
ENABLE_OFFLINE_MODE=true

# Cache Configuration
CACHE_DURATION_MINUTES=30
MAX_CACHE_SIZE_MB=50

# Image Configuration
ENABLE_IMAGE_COMPRESSION=true
MAX_IMAGE_QUALITY=85
MAX_IMAGE_SIZE_MB=5

# Network Configuration
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRY_ATTEMPTS=3
